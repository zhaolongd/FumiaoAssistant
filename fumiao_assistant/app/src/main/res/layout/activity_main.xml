<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_home"
            style="@style/main_layout"
            android:onClick="onMenuClicks"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon"
                android:background="@drawable/btn_home" />

            <TextView
                style="@style/main_btn"
                android:text="@string/home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_merchant"
            style="@style/main_layout"
            android:onClick="onMenuClicks"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon"
                android:background="@drawable/btn_merchant" />

            <TextView
                style="@style/main_btn"
                android:text="@string/merchant" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_data"
            style="@style/main_layout"
            android:onClick="onMenuClicks"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon"
                android:background="@drawable/btn_data" />

            <TextView
                style="@style/main_btn"
                android:text="@string/data" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_me"
            style="@style/main_layout"
            android:onClick="onMenuClicks"
            android:orientation="vertical">

            <ImageView
                style="@style/main_icon"
                android:background="@drawable/btn_me" />

            <TextView
                style="@style/main_btn"
                android:text="@string/me" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>