<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/arrow_layout_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/icon_m"
        android:layout_width="12dp"
        android:layout_height="1dp"></View>

    <TextView
        android:id="@+id/arrow_layout_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:text="主题"
        android:textColor="@color/font_key"
        android:textSize="@dimen/font_content" />

    <TextView
        android:id="@+id/arrow_layout_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_des"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/font_small" />
    <ImageView
        android:id="@+id/arrow_layout_arrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_arrow" />

</LinearLayout>